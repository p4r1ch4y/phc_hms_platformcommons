generator client {
  provider = "prisma-client-js"
  output   = "../generated/management-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  address     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users            User[]
  patientRegistries PatientRegistry[]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(HOSPITAL_ADMIN)
  tenantId  String?
  tenant    Tenant?  @relation(fields: [tenantId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  SUPER_ADMIN
  HOSPITAL_ADMIN
  DOCTOR
  NURSE
  ASHA
  LAB_TECHNICIAN
  PHARMACIST
  PATIENT
}

model PatientRegistry {
  id        String   @id @default(uuid())
  abhaId    String   @unique
  tenantId  String
  patientId String   // ID of the patient in the tenant's database
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant    Tenant   @relation(fields: [tenantId], references: [id])
}
